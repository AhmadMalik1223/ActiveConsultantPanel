@using IlmdostPanel.Models
@model Admin
@{
    Layout = "~/Views/Shared/_Layoutaccounts.cshtml";
    ViewBag.Title = "Login";
}

<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a class="h1"><b>HR</b>Form</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign in to start your processing</p>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div class="input-group mb-3">
                    
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    @Html.TextBoxFor(m => m.username, new { required = "required", @name = "user" })
                    @*@Html.LabelFor(m => m.Username)*@
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                        @Html.PasswordFor(m => m.password, new { required = "required", @name = "pass" })
                        @*@Html.LabelFor(m => m.Password)*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                        @ViewBag.Errorlogin
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            }

                @*<div class="social-auth-links text-center mt-2 mb-3">
                <a href="#" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                </a>
                <a href="#" class="btn btn-block btn-danger">
                    <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                </a>
            </div>*@
                <!-- /.social-auth-links -->

                @*<p class="mb-1">
                <a href="forgot-password.html">I Forgot My Password</a>
            </p>
            <p class="mb-0">
                <a href="register.html" class="text-center">Register A New User</a>
            </p>*@
            </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


@using IlmdostPanel.Models
@model Company
@{
    ViewBag.Title = "Editcompany";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edit Company</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="">Company</a></li>
                        <li class="breadcrumb-item active">Edit Company</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default">
                <div class="card-body">
                    @using (Html.BeginForm("Editcompany", "Company", FormMethod.Post))
                    {
                        <div class="row">
                            @Html.HiddenFor(m => m.company_id)
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Company Name</label>
                                    @Html.TextBoxFor(m => m.company_name, new { required = "required", @class = "form-control select2" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Registration No</label>

                                    @Html.TextBoxFor(m => m.company_registration, new { required = "required", @class = "form-control select2" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(m => m.company_email, new { required = "required", @class = "form-control select2" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Contact No</label>
                                    @Html.TextBoxFor(m => m.company_contact, new { required = "required", @class = "form-control select2" })
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Owner Name</label>
                                    @Html.TextBoxFor(m => m.company_owner, new { required = "required", @class = "form-control select2" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Company Address</label>
                                    @Html.TextBoxFor(m => m.company_address, new { required = "required", @class = "form-control select2" })
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-12 col-sm-12">
                                <div class="form-group">
                                    <label>About Company</label>
                                    <div class="card-body">
                                        @Html.TextAreaFor(m => m.company_about, new { required = "required", @class = "form-control select2" })
                                        @*<textarea id="summernote">Place<em>some</em><u>text</u><strong>here</strong></textarea>*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Edit Company</button>
                                </div>
                            </div>
                        </div>
                    }
                    <!--Student Information End-->
                </div>
                <!-- /.card -->
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>



